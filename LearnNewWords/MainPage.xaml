<Page
    x:Class="LearnNewWords.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LearnNewWords"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid KeyDown="Grid_KeyDown">
        <Button Content="Start Recap" 
                HorizontalAlignment="Center" 
                Height="50" 
                VerticalAlignment="Center" 
                Width="139" Margin="0,0,0,0" Click="Button_Click"
        />
        <Button Name="Change_dict" Content="Change Dictionary" HorizontalAlignment="Center" Margin="0,150,0,0" VerticalAlignment="Center" Click="Change_dict_Click"/>
        <Button Name="Add_Words" Content="Add New Words" HorizontalAlignment="Center" Margin="0,300,0,0" VerticalAlignment="Center" Click="Add_Words_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="100,00,230,5" Text="Current Folder: " TextWrapping="Wrap" VerticalAlignment="Bottom"/>
        <HyperlinkButton Name="Hyperlink_Folder" Content="Open Directory"  HorizontalAlignment="Left" Margin="210,00,100,0" VerticalAlignment="Bottom" Click="Hyperlink_Folder_Click"/>
    </Grid>
</Page>
